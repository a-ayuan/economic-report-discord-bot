DISCORD_TOKEN=YOUR_TOKEN_HERE

# Channel IDs (right click channel -> Copy ID)
REPORT_CHANNEL_ID=123456789012345678
COMMAND_CHANNEL_ID=123456789012345679

# Cache / data
CACHE_DIR=./data

# Calendar refresh interval (minutes)
CALENDAR_REFRESH_MINUTES=30

# Watcher cadence
WATCHER_TICK_SECONDS=1
BURST_POLL_SECONDS=5
BURST_WINDOW_SECONDS=60
BACKOFF_START_SECONDS=60
BACKOFF_MAX_SECONDS=900

# Timezone
TIMEZONE=America/New_York

# Optional: BLS API registration key (recommended)
BLS_API_KEY=

# Optional: limit which events post (true/false)
POST_ONLY_CONFIGURED_SOURCES=true

# Health server (Render keeps a web service alive; UptimeRobot can ping /health)
HEALTH_HOST=0.0.0.0
HEALTH_PORT=8080
